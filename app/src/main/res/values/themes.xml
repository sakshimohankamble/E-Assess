<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EAssess" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0FA5B8</item>
        <item name="colorPrimaryVariant">#0098A6</item>
        <item name="colorOnPrimary">#00ACC2</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#00ACC2</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EAssess.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="nobackarrow">
        <item name="android:homeAsUpIndicator">@drawable/hidearrow</item>
    </style>

    <style name="Theme.EAssess.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EAssess.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>